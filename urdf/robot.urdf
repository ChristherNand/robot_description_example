<?xml version="1.0"?>
<robot name="simple_robot_base">
  <!-- Define the robot base link -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.1 0.1 0.01" /> <!-- Width, length, and thickness in meters -->
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1.0" />
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.1 0.1 0.01" />
      </geometry>
    </collision>
    <inertial>
      <mass value="0.3" /> <!-- Mass in kilograms -->
      <inertia ixx="0.000025" iyy="0.000025" izz="0.000025" ixy="0.0" ixz="0.0" iyz="0.0"/>
      <!-- Inertia tensor components; these are approximate values assuming uniform mass distribution -->
    </inertial>
  </link>
</robot>